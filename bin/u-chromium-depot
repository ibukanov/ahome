#!/bin/sh

# shellcheck shell=dash
# shellcheck enable=all
# shellcheck disable=SC2250,SC2249

set -e -u

d="$HOME/work/depot_tools"

if ! test -d "$d"; then
  echo "$d does not exist. Make sure that Chromium depot tools is placed there." >&2
  exit 1
fi

if test "${PATH#*"$d:"}" = "$PATH"; then
  # Depot is not on path
  export PATH="${d}:$PATH"
fi

if test $# -ne 0; then
  exec "$@"
fi

exec "$SHELL"
